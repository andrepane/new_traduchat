rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Funci칩n auxiliar para verificar si el usuario est치 autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Reglas para archivos de audio
    match /audios/{chatId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && request.resource.contentType.matches('audio/.*')
        && request.resource.size < 10 * 1024 * 1024; // M치ximo 10MB
    }

    match /avatars/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && request.auth.uid == userId
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 5 * 1024 * 1024; // M치ximo 5MB
    }
  }
}
